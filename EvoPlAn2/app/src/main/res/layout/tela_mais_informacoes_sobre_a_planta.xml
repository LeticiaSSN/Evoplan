<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/umidadeIdeal"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/caixaTextoUmidadeIdeal"
        android:layout_below="@+id/caixaTextoOrigem2"
        android:text="Umidade Ideal:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#008B8B" />

    <TextView
        android:id="@+id/caixaTextoCategoria"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/categoria2"
        android:layout_below="@+id/categoria2"
        android:text="algumaCoisa"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/caixaTextoUmidadeIdeal"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/caixaTextoOrigem2"
        android:layout_below="@+id/caixaTextoOrigem2"
        android:layout_marginTop="16dp"
        android:text="faltaEditar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/caixaTextoOrigem2"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/origem"
        android:layout_below="@+id/origem"
        android:text="faltaEditar"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/origem"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/caixaTextoCategoria"
        android:layout_below="@+id/caixaTextoCategoria"
        android:text="Origem:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#008B8B" />

    <TextView
        android:id="@+id/categoria2"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/caixaTextoCuidados"
        android:layout_below="@+id/caixaTextoCuidados"
        android:text="Categoria:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#008B8B" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nomePlanta"
        android:layout_alignBottom="@+id/nomePlanta"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:onClick="confirmarPlanta" />

    <TextView
        android:id="@+id/cuidadoPlanta"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/caixaTextoCuidados"
        android:layout_below="@+id/checkbox"
        android:layout_marginTop="29dp"
        android:text="Cuidado da Planta:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#008B8B" />

    <TextView
        android:id="@+id/caixaTextoPlanta"
        android:layout_width="308dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/cuidados"
        android:layout_below="@+id/cuidadoPlanta"
        android:text="A rega deve ser feita pelo menos uma vez ao dia, mas, deve-se tomar cuidado para nÃ£o encharcar o solo."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/cuidados"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/categoria2"
        android:layout_below="@+id/caixaTextoPlanta"
        android:text="Cuidado de Poda:"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="#008B8B" />

    <TextView
        android:id="@+id/caixaTextoCuidados"
        android:layout_width="308dp"
        android:layout_height="100dp"
        android:layout_below="@+id/cuidados"
        android:layout_centerHorizontal="true"
        android:text="As podas devem ser realizadas entre junho e agosto e sempre com tesouras afiadas e na diagonal dos galhos e folhas.  "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/nomePlanta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="MARGARIDA"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#008B8B" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#008B8B"
        android:onClick="menuPrincipal"
        android:text="Voltar"
        android:textAppearance="@android:style/TextAppearance" />

</RelativeLayout>